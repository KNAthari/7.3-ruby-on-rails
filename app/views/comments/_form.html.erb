<%= form_with model: [ @category, @article, @article.comments.build ] do |form| %>
    <p>
      <%= form.label :commenter %><br>
      <%= form.text_field :commenter %>
    </p>
    <div= "comment body">
      <p>
        <%= form.label :body %><br>
        <%= form.text_area :body %>
      </p>
    </div>

    <div>
        <%= form.label :status %><br>
        <%= form.select :status, Visible::VALID_STATUSES, selected: 'public' %>
    </div>


    <p>
      <%= form.submit %>
    </p>
  <% end %>
  