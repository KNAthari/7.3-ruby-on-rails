<body>
    <header>
        <div class = "logo">
            <h1 class = "logo-text"><span>Bantu</span>Blogging</h1>
        </div>
        <i class = "fa fa-bars"></i>
        <ul>
            <% @categories.each do |category| %>
                <li><%= link_to category.name, category_path(category) %> </li>
            <% end %>
        </ul>
    </header>


    <div class = "page-wrapper">
    </div>


    <div class = "footer">
        <div class = "footer-content">
            <div class = "footer-section" "about">
            <h1><span>Bantu</span>Blogging</h1>
            <p></p>
            </div>
            <div class = "contact">
            </div>
            <div class = "footer-section" "links">
                <h2>
                    Quick links
                </h2>
                <ul>
                    <li><%= link_to "Create New Category", new_category_path(@category) %> </li>
                </ul>
            </div>
            <div class = "footer-section" "contact-form">
                <h2>Contact us</h2>
            </div>
        </div>
        <div class = "footer-bottom">
            Bloggingbantu.com | Created by Kenyon Nyangai
        </div>
    </div>


</body>




